{% extends "base.xml" %}
{% import 'record_formats.xml' as formats %}

{% block request_element %}
        {{ macros.request_element(query_params) }}
{% endblock %}

{% block interior_xml %}
    <ListRecords>
        {% for record in records %}
            {{formats.create_record(record, format)}}
        {% endfor %}
        {% if token %}
            <resumptionToken>{{token}}</resumptionToken>
        {% endif %}
    </ListRecords>
{% endblock %}